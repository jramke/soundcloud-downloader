{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "description": "This is my first Chrome extension.",
    "action": {
      "default_popup": "popup.html",
      "default_title": "My Extension"
    },
    "permissions": [
      "tabs",
      "scripting"
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "background": {
      "service_worker": "main.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
      }
    ]
  }